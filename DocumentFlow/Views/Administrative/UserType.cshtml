                    @Html.ActionLink("Back", "Index", "Administrative", null, new { @class = "", style = "color:#fff;" })
                </i>
            </span>
        </div>
    </div>

    <br />


    <table id="tblUsers" style="text-align:center;" data-filter="#filter">
        <thead>
            <tr>
                <th>UserType</th>
                <th>Description</th>
                <th>Created On</th>
                <th>Modified On</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserType1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedOn)
                    </td>
                    <td>
                        @if (item.ModifiedOn == null)
                        {
                            var modified = "not modofoed yet";
                            @Html.DisplayFor(modelItem => modified)
                        }

                        @Html.DisplayFor(modelItem => item.ModifiedOn)

                    </td>

                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.UserTypeId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.UserTypeId }) |
                        @Html.ActionLink("Delete", "DeleteUserType", new { id = item.UserTypeId }, new { onClick = "confirm('hi')" })
                    </td>
                </tr>
            }
        </tbody>

        <tfoot>
            <tr>
                <td colspan="11"><div class="pagination pagination-centered" style="float:right;"></div></td>
            </tr>
        </tfoot>

    </table>
    <script type="text/javascript">
        $(function () {

            $('#tblUsers').footable({ pageSize: 5 });

            $('input[type="checkbox"]').iCheck({
                checkboxClass: 'icheckbox_minimal-blue',
                radioClass: 'iradio_minimal-blue'
            });

            $("#check-all").on('ifUnchecked', function (event) {
                $("input[type='checkbox']", ".table-hover").iCheck("uncheck");
            });

            $("#check-all").on("ifChecked", function (event) {
                $("input[type='checkbox']", ".table-hover").iCheck("check");
            });

            $(".fa-star,.fa-star-o, .glyphicon-star, .glyphicon-star-empty").click(function (e) {
                e.preventDefault();
                var glyph = $(this).hasClass("glyphicon");
                var fa = $(this).hasClass("fa");

                if (glyph) {
                    $(this).toggleClass("glyphicon-star");
                    $(this).toggleClass("glyphicon-star-empty");
                }

                if (fa) {
                    $(this).toggleClass("fa-star");
                    $(this).toggleClass("fa-star-o");
                }
            });
        });
    </script>

